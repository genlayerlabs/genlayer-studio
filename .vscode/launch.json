{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "GenVM: Remote Attach",
      "type": "debugpy",
      "request": "attach",
      "port": 6678,
      "host": "localhost",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "preLaunchTask": "docker-compose-up"
    },
    {
      "name": "Python: Flask (Docker)",
      "type": "debugpy",
      "request": "launch",
      "python": "/usr/bin/python",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceRoot}",
        "FLASK_APP": "server.py",
        "FLASK_ENV": "development",
        "DOCKER_HOST": "unix:///var/run/docker.sock"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ],
      "stopOnEntry": false,
      "module": "flask"
    }
  ],
  "compounds": [
    {
      "name": "Debug All",
      "configurations": ["Python: Debug Server", "Python: Debug Launch Prototype"]
    }
  ],
  "tasks": [
    {
      "label": "docker-compose-up",
      "type": "shell",
      "command": "docker-compose up",
      "problemMatcher": []
    }
  ]
}
