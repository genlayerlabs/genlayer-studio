FROM python:3.12.2-slim as base

ARG path=/app

RUN mkdir $path
WORKDIR $path

COPY ../.env .

ADD genvm $path/genvm

WORKDIR $path/genvm

RUN ln contracts/base.py /tmp/base.py
RUN ln contracts/llms.py /tmp/llms.py
RUN ln contracts/context_wrapper.py /tmp/context_wrapper.py
RUN ln contracts/equivalence_principle.py /tmp/equivalence_principle.py

RUN pip install --no-cache-dir -r requirements.txt
RUN pip install Flask

ENV PYTHONPATH "${PYTHONPATH}:/${path}"
ENV FLASK_APP=server.py

###########START NEW IMAGE : DEBUGGER ###################
FROM base as debug
RUN pip install debugpy

#CMD python -X frozen_modules=off -m debugpy --listen 0.0.0.0:6678 --wait-for-client -m flask run -h 0.0.0.0 -p 6000
CMD python -m debugpy --listen 0.0.0.0:6678 -m flask run -h 0.0.0.0 -p 6000

###########START NEW IMAGE: PRODUCTION ###################
FROM base as prod

CMD flask run -h 0.0.0.0 -p 6000