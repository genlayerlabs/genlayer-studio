{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "test"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "types": ["node", "jsdom"],
    "lib": ["ES6", "dom", "ESNext", "ES2015"],
    "composite": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
